
<div class="content-box">
    <div class="element-wrapper">
        <h3 class="element-header">
            Login
        </h3>
        <div class="auth-box-w" style="max-width:700px; margin:0 auto; width:100%">
            <div class="logo-w" style="padding:6%">
            <a href="index.html"><img alt="" src="/img/olx.jpg" style="height:20%; width:20%;"></a>
            </div>
            <h4 class="auth-header">
            Login Form
            </h4>
            <form action="/user-login" method="POST" style="padding-bottom: 30px;">
            <div class="form-group">
                <label for="">Phone</label><input style="text-transform:none;" id="phone" name="phone" required="required" class="form-control" placeholder="Enter your Phone" pattern= "[0-9][0-9][0-9][0-9][0-9][0-9][0-9][0-9][0-9][0-9][0-9]">
                <div class="pre-icon icon-phone"></div>
            </div>
            <div class="form-group">
                <label for="">Password</label><input style="text-transform:none;" id="password" name="password" required="required" class="form-control" placeholder="Enter your password" type="password">
                <div class="pre-icon os-icon os-icon-fingerprint"></div>
            </div>
            <div class="buttons-w">
                <button class="btn btn-primary" type="submit" name="submit">Log me in</button>
                <label class="form-check-label"><a href="#">Forget Password ?</a></label>
            </div>
            <div class="form-message">
            </div>
            </form>
            <div class="buttons-w" style="text-align: right; padding: 10px; background-color: #bed6e6;">
            <div class="form-check-inline">
            <label class="form-check-label" style="margin-right: 10px;">Create Account</label>
            <a class="btn btn-secondary" href="/signup">Sign Up</a>
            </div>
            </div>
        </div>
    </div>
</div>
<script>
    $("#home").removeClass("active");
    $("#login").addClass("active");
    $(".top-bar").hide();
</script>