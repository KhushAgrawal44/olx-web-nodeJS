<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<div class="content-box">
    <div class="element-wrapper">
        <h3 class="element-header">
            Signup
        </h3>
        <div class="pipeline white lined-primary auth-box-w" style="max-width:700px; margin:0 auto; width:100%">
            <div class="pipeline-header">
            <h5 class="pipeline-name">
                Create Your Account
            </h5>
            <div class="pipeline-header-numbers">
                {{!-- <div class="pipeline-value">
                $45,367
                </div> --}}
            </div>
            <div class="pipeline-settings os-dropdown-trigger">
                <i class="icon-user" style="font-size:x-large"></i>
            </div>
            </div>
            {{#if success}}
                <script> 
                    swal('Success','You Successfully Created An Account','success'); 
                    setTimeout(function(){ window.location = '/login'; }, 1000);
                </script>
            {{else}}
                {{#if error}}
                    <div class="alert alert-danger" role="alert">
                        <strong>Oh snap! </strong>
                        <ul>
                            {{#each error}}
                                <li>{{this.msg}}</li>
                            {{/each}}
                        </ul>
                    </div>
                {{/if}}
            <form action="/user-submit" method="post" style="padding:0% 0% 0% 10%;">
                <div class="row">
                    <div class="col-sm-6">
                    <div class="form-group">
                        <label for="">First Name</label><input name="first_name" required="required" class="form-control" placeholder="First Name" type="text">
                        <div class="pre-icon icon-user"></div>
                    </div>
                    </div>
                    <div class="col-sm-6">
                    <div class="form-group">
                        <label for="">Last Name</label><input name="last_name" class="form-control" placeholder="Last Name" type="text">
                    </div>
                    </div>
                    <div class="col-sm-12">
                    <div class="form-group">
                        <label for="">Phone</label><input name="phone" required="required" class="form-control" placeholder="Phone" type="number">
                        <div class="pre-icon icon-phone"></div>
                    </div>
                    </div>
                    <div class="col-sm-6">
                    <div class="form-group">
                        <label for=""> Password</label><input name="password" required="required" class="form-control" placeholder="Password" type="password">
                        <div class="pre-icon os-icon os-icon-fingerprint"></div>
                    </div>
                    </div>
                    <div class="col-sm-6">
                    <div class="form-group">
                        <label for="">Confirm Password</label><input name="confirm_password" class="form-control" placeholder="Confirm Password" type="password">
                    </div>
                    </div>
                    <div class="col-sm-12">
                    <div class="form-group">
                        <label for=""> City</label><input name="city" required="required" class="form-control" placeholder="City" type="text">
                        <div class="pre-icon icon-globe"></div>
                    </div>
                    </div>
                </div>
                <div class="buttons-w">
                    <button class="btn btn-primary" type="submit">Register Now</button>
                </div>
            </form>
            {{/if}}
        </div>
    </div>
</div>
<script>
    $("#home").removeClass("active");
    $("#login").addClass("active");
    $(".top-bar").hide();
</script>